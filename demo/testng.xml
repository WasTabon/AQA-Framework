<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="UltimateQA Test Suite" parallel="tests" thread-count="2">

    <test name="Chrome Tests">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.ultimateqa.tests.HomePageTest" />
        </classes>
    </test>

    <test name="Firefox Tests">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.ultimateqa.tests.HomePageTest" />
        </classes>
    </test>

     <test name="Browser Tests">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.ultimateqa.tests.PracticePageTest" />
        </classes>
    </test>

    <test name="Web UI Tests">
        <classes>
            <class name="com.ultimateqa.tests.WebUITests" />
        </classes>
    </test>

    <suite name="UltimateQA API Tests">
    <test name="API Tests">
        <classes>
            <class name="com.ultimateqa.tests.APITests" />
        </classes>
    </test>
</suite>

</suite>
